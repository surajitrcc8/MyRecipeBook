<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="recipe"
            type="com.example.android.recipebook.model.Recipe" />
        <variable
            name="step"
            type="com.example.android.recipebook.model.Step" />
    </data>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp10"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp5"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_recipe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/no_image"
                app:srcUrl="@{step.videoURL}"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_gravity="bottom"

                >

                <TextView
                    android:id="@+id/tv_recipe_name"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginStart="@dimen/dp20"
                    android:layout_gravity="center_vertical"
                    tools:text="TextView"
                    android:layout_weight="1"
                    android:text="@{recipe.name}"/>
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    app:srcCompat="@drawable/dining"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_dining_count"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_gravity="center_vertical"
                    android:text="@{String.valueOf(recipe.servings)}"
                    tools:text="8" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
</layout>